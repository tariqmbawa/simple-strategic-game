<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="228.0" prefWidth="300.0" styleClass="root" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LoginScreenController">

    <stylesheets>
        <URL value="@login_css.css" />
    </stylesheets>


    <children>

        <Label id="play-screen-title" layoutX="68.0" layoutY="34.0" text="Register User" />

        <Label layoutX="14.0" layoutY="90.0" prefHeight="17.0" prefWidth="56.0" text="Username" />
        <TextField fx:id="usernameText" layoutX="76.0" layoutY="86.0" prefHeight="11.0" prefWidth="200.0" />

        <Label layoutX="14.0" layoutY="125.0" prefHeight="17.0" prefWidth="56.0" text="Password" />
        <PasswordField fx:id="passwordText" layoutX="76.0" layoutY="121.0" prefHeight="25.0" prefWidth="200.0" />

        <Button fx:id="redID" contentDisplay="TOP" layoutX="80.0" layoutY="159.0" mnemonicParsing="false" onAction="#registerUser" prefHeight="25.0" prefWidth="87.0" text="Register" />
        <Button fx:id="backID" layoutX="170.0" layoutY="159.0" mnemonicParsing="false" onAction="#handleBack" prefHeight="25.0" prefWidth="87.0" text="Back" />

        <Text id="error" fx:id="erText" layoutX="11.0" layoutY="203.0" opacity="0.78" wrappingWidth="279.0" />

    </children>
</AnchorPane>
