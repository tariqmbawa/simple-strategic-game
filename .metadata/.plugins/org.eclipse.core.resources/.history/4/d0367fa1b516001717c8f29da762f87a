import javafx.application.Application;
import javafx.event.EventHandler;
import javafx.fxml.FXMLLoader;
import javafx.scene.Scene;
import javafx.scene.input.KeyCode;
import javafx.scene.input.KeyEvent;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;


public class LoginScreen extends Application {

	
	public static void main(String[] args) {
		launch(args);
	}
	
	@Override
    public void start(Stage stage) throws Exception {
		GridPane root = FXMLLoader.load(getClass().getResource("fxml_layout/login_screen_layout.fxml"));
		
		root.setOnKeyPressed(new EventHandler<KeyEvent>() {
			public void handle(KeyEvent key) {
				if (key.getCode() == KeyCode.LEFT ||
					key.getCode() == KeyCode.UP ||
					key.getCode() == KeyCode.RIGHT ||
					key.getCode() == KeyCode.DOWN)
					System.out.println("Key Pressed: " + key.getCode().toString());
			}
		});
    
        Scene scene = new Scene(root, 800, 500);
    
        stage.setTitle("User Login Screen");
        stage.setScene(scene);
        stage.show();
    }
	
	
	public User getLoggedUser() {
		51        return loggedUser;
		52    }
		53
		54    public boolean userLogging(String userId, String password){
		55        if (Authenticator.validate(userId, password)) {
		56            loggedUser = User.of(userId);
		57            gotoProfile();
		58            return true;
		59        } else {
		60            return false;
		61        }
		62    }
		63
		64    void userLogout(){
		65        loggedUser = null;
		66        gotoLogin();
		67    }
		68
		69    private void gotoProfile() {
		70        try {
		71            ProfileController profile = (ProfileController) replaceSceneContent("profile.fxml");
		72            profile.setApp(this);
		73        } catch (Exception ex) {
		74            Logger.getLogger(Main.class.getName()).log(Level.SEVERE, null, ex);
		75        }
		76    }
		77
		78    private void gotoLogin() {
		79        try {
		80            LoginController login = (LoginController) replaceSceneContent("login.fxml");
		81            login.setApp(this);
		82        } catch (Exception ex) {
		83            Logger.getLogger(Main.class.getName()).log(Level.SEVERE, null, ex);
		84        }
		85    }
		86
		87    private Initializable replaceSceneContent(String fxml) throws Exception {
		88        FXMLLoader loader = new FXMLLoader();
		89        InputStream in = Main.class.getResourceAsStream(fxml);
		90        loader.setBuilderFactory(new JavaFXBuilderFactory());
		91        loader.setLocation(Main.class.getResource(fxml));
		92        AnchorPane page;
		93        try {
		94            page = (AnchorPane) loader.load(in);
		95        } finally {
		96            in.close();
		97        }
		98        Scene scene = new Scene(page, 800, 600);
		99        stage.setScene(scene);
		100        stage.sizeToScene();
		101        return (Initializable) loader.getController();
		102    }
}
