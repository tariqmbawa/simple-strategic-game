
import java.io.InputStream;
import java.util.logging.Level;
import java.util.logging.Logger;

import javafx.application.Application;
import javafx.event.EventHandler;
import javafx.fxml.FXMLLoader;
import javafx.fxml.Initializable;
import javafx.fxml.JavaFXBuilderFactory;
import javafx.scene.Scene;
import javafx.scene.input.KeyCode;
import javafx.scene.input.KeyEvent;
import javafx.scene.layout.AnchorPane;
import javafx.scene.layout.GridPane;
import javafx.stage.Stage;


public class MenuState extends Application {
	private final double MINIMUM_WINDOW_WIDTH = 800.0;
    private final double MINIMUM_WINDOW_HEIGHT = 500.0;
	
	private Stage mStage;
    private UserProfile mLoggedUser;
	
	public static void main(String[] args) {
		launch(args);
	}
	
	@Override
    public void start(Stage stage) {  
		try {
			mStage = stage;
			mStage.setTitle("Single Player Monster");
			mStage.setMinWidth(MINIMUM_WINDOW_WIDTH);
			mStage.setMinHeight(MINIMUM_WINDOW_HEIGHT);
	        launchLoginScreen();
	        mStage.show();
	        
		} catch (Exception ex) {
			Logger.getLogger(MenuState.class.getName()).log(Level.SEVERE, null, ex);
			
		}
    }
	
	public void logoutAction() {
		/** TODO: Clear current UserProfile, save any data **/
		
		launchLoginScreen();
	}
	
	public void loginAction() {
		/** TODO: call init and load level **/
		launchPlayScreen();
	}
	
	private void launchLoginScreen() {
		try {
			FXMLLoader loader = new FXMLLoader(
					getClass().getResource("fxml_layout/login_screen_layout.fxml")
			);
			
			GridPane root = loader.load();
			Scene scene = new Scene(root, MINIMUM_WINDOW_WIDTH, MINIMUM_WINDOW_HEIGHT);
			mStage.setScene(scene);
			
			LoginScreenController loginScreenController = loader.getController();
			loginScreenController.setMenuState(this);
			
		} catch (Exception ex) {
			Logger.getLogger(MenuState.class.getName()).log(Level.SEVERE, null, ex);
		}
	}
	
	private void launchPlayScreen() {
		try {
			FXMLLoader loader = new FXMLLoader(
					getClass().getResource("fxml_layout/play_screen_layout.fxml")
			);
			
			
			GridPane root = loader.load();
			
			root.setOnKeyPressed(playScreenController.getOnKeyPressEventHandler());
			
			Scene scene = new Scene(root, MINIMUM_WINDOW_WIDTH, MINIMUM_WINDOW_HEIGHT);
			mStage.setScene(scene);
			
			PlayScreenController playScreenController = loader.getController();
			playScreenController.setMenuState(this);
		
		} catch (Exception ex) {
			Logger.getLogger(MenuState.class.getName()).log(Level.SEVERE, null, ex);
		}
	}
	
}
